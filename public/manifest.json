{
  "name": "Gotabit",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Gotabit wallet extension",
  "icons": {
    "512": "logo512.png"
  },
  "action": {
    "default_icon": "logo512.png",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scriptToInject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage", "hid", "notifications", "identity"]
}
