{
  "name": "Gotabit",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Gotabit wallet extension",
  "icons": {
    "512": "logo512.png"
  },
  "action": {
    "default_icon": "logo512.png",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scriptToInject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';connect-src data: https://*.gotabit.dev/"
  },
  "permissions": ["storage", "notifications", "identity", "idle"]
}
